{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": {
    "backend": {
      "rootDir": "backend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd ../packages/prisma && npm install && npx prisma generate && npx prisma migrate deploy && npm run build && cd ../backend && npm install && npm run build"
      },
      "deploy": {
        "startCommand": "node dist/main.js",
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 30
      }
    },
    "frontend": {
      "rootDir": "frontend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build"
      },
      "deploy": {
        "startCommand": "npx serve -s dist -l $PORT"
      }
    }
  }
}

