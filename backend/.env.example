# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ship_reporting?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV=development

# Upload Directory (for local storage)
UPLOAD_DIR=./uploads

# ==========================================
# AWS S3 Configuration
# ==========================================
# Set USE_S3_STORAGE=true to enable S3 storage
# When disabled, files are stored locally in UPLOAD_DIR

USE_S3_STORAGE=false

# AWS Credentials
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS Region (e.g., us-east-1, ap-south-1, eu-west-1)
AWS_REGION=us-east-1

# S3 Bucket Name (must be globally unique)
AWS_S3_BUCKET_NAME=your-bucket-name

# ==========================================
# Email (SendGrid)
# ==========================================
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

